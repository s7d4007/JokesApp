@using System.Security.Claims;

@model IEnumerable<JokesApp.Models.Joke>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="mb-3">
    <form asp-controller="Jokes" asp-action="Index" method="get">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search for a joke..." />
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JokeQuestion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JokeAnswer)
            </th>
            <th></th>
        </tr>
    </thead>
</table>

<div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@item.JokeQuestion</h5>
                        <p class="card-text text-muted italic">Click details for the punchline!</p>

                        <div class="mt-auto pt-3 border-top">

                        @{
                            var likedList = ViewBag.UserLikes as List<int> ?? new List<int>();
                            bool hasLiked = likedList.Contains(item.Id);
                        }
                        <form asp-action="Like" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm @(hasLiked ? "btn-danger" : "btn-outline-danger")">
                                <i class="bi @(hasLiked ? "bi-heart-fill" : "bi-heart")"></i> @item.Likes
                            </button>
                        </form>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Read Joke</a>

                            @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == item.OwnerID)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
</div>