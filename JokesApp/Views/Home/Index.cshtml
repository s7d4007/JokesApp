@{
    ViewData["Title"] = "Home Page";
}

<div class="p-5 mb-4 hero-gradient text-white rounded-5 shadow-lg position-relative overflow-hidden">
    @* Decorative background circles for that creative touch *@
    <div class="position-absolute bg-white opacity-10 rounded-circle" style="width:300px; height:300px; top:-100px; right:-50px;"></div>

    <div class="container-fluid py-5 position-relative">
        <h1 class="display-3 fw-bold">Code. Laugh. Commit. <br /> <span class="text-warning">Repeat.</span></h1>
        <p class="col-md-8 fs-4">The #1 source for developer-approved humor. Join our community to contribute your own original bugs... we mean jokes.</p>

        <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
            <a asp-controller="Jokes" asp-action="Index" class="btn btn-warning btn-lg px-4 me-md-2 fw-bold shadow-sm">Explore Jokes</a>
            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light btn-lg px-4">Join the Club</a>
            }
        </div>
    </div>
    @if (ViewBag.JokeOfTheDay != null)
    {
        <div class="mt-5 p-3 bg-white bg-opacity-10 rounded-4 border border-white border-opacity-25 shadow-sm">
            <h6 class="text-warning fw-bold mb-1"><i class="bi bi-stars"></i> Joke of the Moment</h6>
            <p class="mb-0 fs-5">"@ViewBag.JokeOfTheDay"</p>
            <p class="text-light opacity-75 small italic">... @ViewBag.JokeOfTheDayAnswer</p>
        </div>
    }
</div>

<hr class="my-5 opacity-25" />

<div class="row text-center g-4">
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm hover-up p-4 rounded-4">
            <div class="display-5 text-info mb-3"><i class="bi bi-controller"></i></div>
            <h3 class="fw-bold">1. Engage</h3>
            <p class="text-muted">Rate jokes and find your favorite developer humor. Every laugh is a successful production build.</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm hover-up p-4 rounded-4">
            <div class="display-5 text-warning mb-3"><i class="bi bi-pencil-square"></i></div>
            <h3 class="fw-bold">2. Contribute</h3>
            <p class="text-muted">Think you're funny? Share your original jokes with the world and build your reputation.</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm hover-up p-4 rounded-4 border-bottom border-primary border-4">
            <div class="display-5 text-success mb-3"><i class="bi bi-graph-up-arrow"></i></div>
            <h3 class="fw-bold">3. Grow</h3>
            <p class="text-muted">We update daily with fresh content from coders worldwide. Stay sharp, stay hilarious.</p>
        </div>
    </div>
</div>

<div class="text-center mt-5 py-4">
    <h4 class="text-muted">Want to personalize your experience?</h4>
    <p>Logged in users get to like, submit, and manage their own content.</p>
</div>